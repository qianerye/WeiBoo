/* components/detail-interact-tool/detail-interact-tool.wxss */
@import "/icons/icon.wxss";

.interact-tool-seat {
	height: 88rpx;
}

.interact-tool-wrap {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 88rpx;
	background: #fff;
	z-index: 999;
	display: flex;
	align-items: center;
	border-top: 1px solid #ececec;
	box-sizing: border-box;
	padding: 0 14px;
}

.interact-tool-wrap .tool-input {
	flex-grow: 1;
	background-color: #ececec;
	text-indent: 12px;
	box-sizing: border-box;
	height: 66rpx;
	border-radius: 33rpx;
}

.interact-tool-wrap .iconfont {
	font-size: 20px;
	padding-left: 14px;
}