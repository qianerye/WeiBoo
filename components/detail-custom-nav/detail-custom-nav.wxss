/* components/detail-custom-nav/detail-custom-nav.wxss */
@import '/icons/icon.wxss';

.detail-custom-nav-wrap {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	background-color: #fff;
}

.detail-custom-nav {
	display: flex;
	justify-content: flex-start;
	align-items: center;
	height: 100%;
}

.detail-custom-nav .detail-tool-left {
	box-sizing: border-box;
	border: 1rpx solid #ececec;
	display: flex;
}

.detail-tool-left .left-back {
	flex-grow: 1;
	height: 100%;
	text-align:center;
}

.detail-tool-left .iconfont {
	font-size: 20px;
}

.detail-tool-left .center-line {
	width: 1px;
	background: #ececec;
	margin: 5px 0;
}

.detail-tool-left .right-home {
	flex-grow: 1;
	height: 100%;
	text-align:center;
}

.detail-custom-nav .detail-tool-right {
	flex-grow: 1;
	position: relative;
}

.detail-tool-right .ipt {
	display: block;
	box-sizing: border-box;
	width: 100%;
	height: 100%;
	background-color: #ececec;
	text-indent: 70rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	font-size: 36rpx;
}

.detail-tool-right .iconfont {
	position: absolute;
	top: 50%;
	left: 7px;
	font-size: 20px;
	transform: translateY(-12px);
}