/* components/navbar/index.wxss */

.navbar {
  height :64rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  flex-shrink: 0;
  background-color: #fff;
}

.navbar-action-wrap {
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  position: absolute;
  left: 10px;
  z-index: 11;
  line-height: 1;
  padding-top: 4px;
  padding-bottom: 4px;
}
.search-wrap{
  background-color: rgba(240,240,240);
  height :64rpx;
  width: 500rpx;
  position: absolute;
  left : 10rpx;
  border-radius: 20px;
  line-height: 60rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  font-weight: 300;
}

.search-wrap .text{
  margin-left: 20rpx;
}

.barText{
  position: absolute;
  margin-top: 42rpx;
  line-height: 80rpx;
  height: 64rpx;
  text-align: center;
  width: 100%;
}

.navbar-action-group {
  border: 1px solid #ddd;
  border-radius: 20px;
  overflow: hidden;
}


.iconBack,.iconHome{
  padding: 0 20rpx;
  font-size: 40rpx;
}
.iconBack{
  border-right: 1px solid #ddd;
}